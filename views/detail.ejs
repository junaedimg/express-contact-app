<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-tittle">
                        <%= contact.nama %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <%= contact.noHP %>
                    </h6>
                    <p class="card-text">
                        <%= contact.email %>
                    </p>
                    <a href="/contact/edit/<%= contact.nama %>" class="btn badge btn-info">Ubah kontak</a>
                    <a href="/contact/delete/<%= contact.nama %>" class="btn badge btn-danger" onclick="return confirm('Yakin hapus ?')">Hapus kontak</a>
                    <a href="/contact" class="card-link d-block mt-3"> <<< Kembali ke daftar contact</a>
                </div>
            </div>
        </div>
    </div>
</div>